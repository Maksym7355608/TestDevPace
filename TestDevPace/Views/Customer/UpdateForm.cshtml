@using TestDevPace.Business.Models
@model CustomerModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main</title>
</head>
<body>
    <h1>DevPace Test Task</h1>
    <form action="/Customer/Update" method="post">
    <input type="hidden" name="Id" value="@Model.Id">
    <p>Name</p> <input type="text" name="Name" value="@Model.Name">
    <p>Company Name</p> <input type="text" name="CompanyName" value="@Model.CompanyName">
    <p>Phone</p> <input type="tel" name="Phone" value="@Model.Phone">
    <p>Email</p> <input type="email" name="Email" value="@Model.Email">
    <p>Password</p> <input type="password" name="Password" placeholder="new password">
    <p>Confirm Password</p> <input type="password" name="oldPassword" placeholder="old password"><br><br>

    <input type="submit" value="Update Customer" name="UpdateButton">
    </form>
</body>
</html>